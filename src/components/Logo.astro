---
import type { ProjectId, TechnologyId } from "src/types";
import Svg from "@components/Svg.astro";

interface Props {
  id: ProjectId | TechnologyId;
  size?: number;
}

const { id, size } = Astro.props;

function getId(id: Props["id"]): Props["id"] {
  if (id === "react-native") {
    return "react";
  }
  if (id === "sveltekit") {
    return "svelte";
  }
  return id;
}
---

<Svg id={getId(id)} size={size} />
