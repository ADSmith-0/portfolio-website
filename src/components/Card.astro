---
import type { ProjectIds } from "src/types";
import Svg from "@components/Svg.astro";

interface Props {
  id: ProjectIds;
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<li class="link-card flex-row-center px-4 py-2 br-3">
  <a href={href} class="flex-row-center">
    <Svg icon="chess" height="80" width="80" />
    <h2 class="m-0">{title}</h2>
  </a>
</li>
<style>
  a {
    text-decoration: none;
  }
</style>
