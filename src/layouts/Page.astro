---
import Navbar from "@components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href="/index.css" as="style" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/index.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="m-0">
    <Navbar />
    <main style="margin-top: var(--navbar-height);">
      <slot />
    </main>
  </body>
  <footer>
    <div>
      <div>
        <p class="text-secondary semibold pb-4">Resources</p>
        <a href="/attribution">Attribution</a>
      </div>
      <div>
        <p class="text-secondary semibold pb-5">Links</p>
        <a
          target="_blank"
          href="https://www.linkedin.com/in/adam-smith-9728511ba/">LinkedIn</a
        >
        <a target="_blank" href="https://github.com/ADSmith-0">Github</a>
      </div>
    </div>
  </footer>
</html>

<style>
  footer > div {
    display: inline-grid;
    grid-template-columns: repeat(2, auto);
    gap: var(--spacing-10);

    & a {
      display: block;
      padding-top: var(--spacing-3);
    }
  }
</style>
